{
  "name": "demo-backend",
  "version": "1.0.0",
  "description": "Demo backend",
  "main": "index.js",
  "scripts": {
    "test:unit": "echo \"Error: no unit tests specified\"",
    "test:integration": "cucumber-js",
    "test": "npm run test:integration && npm run test:unit",
    "run:onchange": "node --require ts-node/register --inspect=0.0.0.0:9999 src/index.ts",
    "watch:ts": "nodemon --watch 'src/**/*' -e ts --exec 'npm run run:onchange'",
    "dev": "dotenv npm run watch:ts",
    "build:typescript": "tsc",
    "clean": "rimraf dist/",
    "build": "npm run clean && npm run build:typescript"
  },
  "author": "Uwe Ullrich",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "joi": "^17.11.1",
    "mongoose": "^8.1.0",
    "winston": "^3.11.0",
    "utility-types": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^50.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "nodemon": "^3.0.2"
  }
}